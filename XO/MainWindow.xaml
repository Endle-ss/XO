<Window x:Class="XO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Крестики Нолики" Height="400" Width="400" ResizeMode="NoResize">
    <Grid Background="#FF20232A">
        <!-- Заголовок -->
        <TextBlock Text="КРЕСТИКИ НОЛИКИ" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" 
                   Margin="0,20,0,0" FontSize="28" 
                   Foreground="White" TextAlignment="Center"/>

        <!-- Центрированные кнопки -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Играть" Width="150" Height="50" FontSize="18" 
                    Background="#FF1E90FF" Foreground="White" 
                    Margin="0,10,0,10"
                    Click="PlayButton_Click"/>
            <Button Content="Выход" Width="150" Height="50" FontSize="18" 
                    Background="#FFFF4500" Foreground="White" 
                    Margin="0,10,0,10"
                    Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
